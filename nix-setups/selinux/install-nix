#!/bin/bash

if (( $EUID != 0 )); then
    echo "Must be ran as root"
    exit 1
fi

if ! command -v curl &> /dev/null
then
    echo "curl is required for this script to work"
    exit 2
fi

if [[ -f /etc/nix-setup/install-config.conf ]]
then
  source /etc/nix-setup/install-config.conf
else
  curl -s https://raw.githubusercontent.com/percygt/nix-installer-scripts/main/installer-scripts/regular-nix-installer-selinux.sh | bash
fi
